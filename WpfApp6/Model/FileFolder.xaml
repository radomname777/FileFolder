<UserControl x:Class="WpfApp6.Model.FileFolder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp6.Model"
             mc:Ignorable="d" 
             d:DesignHeight="140" d:DesignWidth="100" MaxHeight="140" MaxWidth="100">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="2*"/>

        </Grid.RowDefinitions>
        <DockPanel Background="White">
            <Button Click="Btn_Click" Name="Btn" Width="100" Height="95">
                <Button.Background>
                    <ImageBrush Stretch="UniformToFill" ImageSource="/Resource/Fodler.png"/>
                </Button.Background>
            </Button>
        </DockPanel>
        <DockPanel Grid.Row="1">
            <Label Name="Label1" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20">Nihad</Label>
        </DockPanel>
    </Grid>
</UserControl>
